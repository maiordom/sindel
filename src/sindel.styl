.b-hidden
    display none

.sindel
    position relative
    float left
    height 21px
    line-height 19px
    font-size 11px
    font-family Arial, sans-serif
    margin 0
    padding 0

    & *
        margin 0
        padding 0

    &_focus
        box-shadow 0 0 5px rgba(0, 0, 0, .3)

    &.sindel_focus &__box
        border 1px solid #5897fb

    &_active &__box
        position relative
        border-top 1px solid #b8b8b8
        border-left 1px solid #e0e0e0
        border-right 1px solid #e0e0e0
        border-bottom 1px solid #e0e0e0
        border-radius 4px
        box-shadow none
        background linear-gradient(to bottom, rgba(220, 220, 220, 1) 0%, rgba(236, 236, 236, 1) 15%, rgba(251, 251, 251, 1) 100%) /* W3C */

    &__box
        position relative
        display block
        text-decoration none
        outline none
        color #000
        border-top 1px solid #e0e0e0
        border-left 1px solid #e0e0e0
        border-right 1px solid #e0e0e0
        border-bottom 1px solid #b8b8b8
        border-radius 4px
        box-shadow inset 0 -1px 1px #e0e0e0
        background linear-gradient(to bottom, rgba(254, 254, 254, 1) 1%, rgba(236, 236, 236, 1) 64%, rgba(224, 224, 224, 1) 100%) /* W3C */

    &__current-text
        display block
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
        margin 0 17px 0 5px
        white-space nowrap
        cursor pointer

    &__arrow-wrapper
        position absolute
        height 100%
        width 17px
        top 0
        right 0
        cursor pointer

    &_active &__arrow
        background-position left top

    &__arrow
        background-position left bottom
        margin 7px 0 0 4px
        width 7px
        height 5px
        background-image unquote('url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAcAAAALCAYAAACzkJeoAAAAGXRFWHRTb2Z0d2FyZQBBZG9iZSBJbWFnZVJlYWR5ccllPAAAAGdJREFUeNpi+P//PwMMB4dF/kfmwxklJSX/WVhZ/4NoFMkdO3aAJWAYxAdLPn/+/L+WrgGKJIgPEmd+8PhZw7EjBxmQwds3rxnuPXjMwAjWjguAXIhsJAyDxPHaid+1BP2JK4QAAgwA2xacfo+JflIAAAAASUVORK5CYII=);')

    &_active &__drop
        z-index 1000

    & &__drop
        left -9999px

    &_active &__drop
        left 0
        display block

    &__drop
        position absolute
        margin-top 1px

    &__drop-inner
        background #fff

        border-top 1px solid #e0e0e0
        border-left 1px solid #e0e0e0
        border-right 1px solid #e0e0e0
        border-radius 4px 4px 0 0
        box-shadow 0 1px 1px 0 #7E7E7E

    &__drop ul
        list-style none
        position relative

    &__majors
        background #fff

    &_active &__search
        display block

    &__search
        margin 6px 4px 6px 4px
        height 18px
        padding 0 3px
        border 1px solid #c7c7c7
        outline none
        font-size 11px
        font-family Arial, sans-serif
        box-shadow 0 1px 1px rgba(0, 0, 0, .6) inset

    &__minors_overflow
        overflow-y auto
        max-height 136px

    &__minors
        background #fff

    &__item
        padding 0 4px 0 4px
        line-height 17px
        cursor pointer

    &__item_active
        background #a7d3ff

    &__shadow
        width 100%
        height 8px
        position absolute

    &__corner
        height 100%
        background-image: unquote('url(data:image/png;base64,);')

    &__corner_left
        float left
        width 5px
        background-position left bottom

    &__corner_right
        float right
        width 5px
        background-position right bottom

    &__shadow-bck
        background-repeat repeat-x
        margin 0 5px
        background-position 0 0
